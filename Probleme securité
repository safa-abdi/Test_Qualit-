import java.util.Scanner;

public class UncontrolledFormatStringExample {
    
    public static void vulnerableFunction(String userInput) {
        // Utilisation non sécurisée de printf avec une chaîne de format externe
        System.out.printf(userInput);  // Problème de formatage non contrôlé
    }
    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Entrez votre chaîne formatée : ");
        String userInput = scanner.nextLine();
        
        vulnerableFunction(userInput);  // Appel à la fonction vulnérable
        
        scanner.close();
    }
}
